@model IEnumerable<ClientDto>

@section title{
    <h1>
        Clients
    </h1>
}

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">TC Kimlik No.</th>
            <th scope="col">Adı</th>
            <th scope="col">Soyadı</th>
            <th scope="col">GSM</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var client in Model)
        {
            <tr>
                <th scope="row">
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a class="btn btn-danger" asp-controller="clients" asp-action="delete" asp-route-id="@client.Id" onclick="return confirmDelete()">
                            <i class="bi bi-trash"></i>
                        </a>
                        <a class="btn btn-success" asp-controller="clients" asp-action="edit" asp-route-id="@client.Id">
                            
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </div>
                </th>
                <td>@client.TcNumber</td>
                <td>@client.Name</td>
                <td>@client.LastName</td>
                <td>@client.Gsm</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-lg btn-primary" role="button" asp-controller="clients" asp-action="create">Add Client</a>

@section scripts{
    <script>
        function confirmDelete(){
            return confirm("Are you sure you want to delete this client?");
        }
    </script>
}

